# Usa una imagen oficial de Node.js para construir la aplicaci贸n
FROM node:18 AS build

# Establece el directorio de trabajo
WORKDIR /app

# Copia los archivos de configuraci贸n y dependencias al contenedor
COPY package*.json ./

# Instala las dependencias
RUN npm install

# Copia todo el c贸digo fuente
COPY . .

# Construye la aplicaci贸n de React
RUN npm run build

# Usa una imagen ligera de Nginx para servir el frontend
FROM nginx:alpine

# Copia los archivos construidos de React al contenedor de Nginx
COPY --from=build /app/dist /usr/share/nginx/html

# Expone el puerto 80 (Nginx usa este puerto por defecto)
EXPOSE 80